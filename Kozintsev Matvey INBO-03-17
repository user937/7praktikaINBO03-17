#include <строка>
#include <iostream>
использование пространства имен std;
 
класс животных
{
защищенный:
    имя строки;
общественности:
    Animal (имя строки)
        : имя (имя)
    {
    };
    
    virtual void Say () = 0;
	 };
 
класс Собака: общественная животная
{
общественности:
    Собака (имя строки): Animal (name)
    {
    };
 
    void Say ()
    {
        cout << name << "ñîáàêà" << endl;
    }
    
};
 
класс Cat: public Animal
{
общественности:
    Cat (имя строки): Animal (name)
    {
    };
 
    void Say () 
    {
        cout << name << "êîøêà" << endl;
    }
};
 
класс Попугай: общественное Животное
{
общественности:
    Parrot (имя строки): Animal (name)
    {
    };
 
    void Say () 
    {
        cout << name << "ïîïóãàé" << endl;
    }
};
 

 
int main ()
{
	Setlocale (0, "рус");
 
    Животные животных * [3] = {
        новая собака («Собака»)
        новый Cat («Cat»),
        новый попугай («попугай») 
    };
 
    for (int i = 0; i <3; i ++)
        {животных [I] -> Say ();};
    
     Система ( "пауза"); 
         return 0;
}
